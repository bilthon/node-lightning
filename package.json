{
  "name": "@node-lightning/main",
  "version": "0.1.0",
  "description": "Toolkit for the Bitcoin Lightning Network",
  "scripts": {
    "start": "cd packages/daemon; npm run start",
    "bootstrap": "lerna bootstrap",
    "format": "prettier --check \"packages/**/*.ts\" \"examples/**/.ts\"",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "postinstall": "lerna run prehoist",
    "bootstrap:ci": "lerna bootstrap --hoist",
    "version": "lerna version --no-push --no-git-tag-version",
    "publish": "lerna publish from-package"
  },
  "keywords": [
    "lightning-network",
    "node-lightning",
    "bitcoin"
  ],
  "author": "Brian Mancini <bmancini@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bn.js": "^4.11.6",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^18.11.9",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "lerna": "^5.3.0",
    "mocha": "^9.1.3",
    "node-addon-api": "^4.2.0",
    "node-gyp": "^8.4.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
