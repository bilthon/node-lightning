{
  "name": "@node-lightning/main",
  "version": "0.1.0",
  "description": "Toolkit for the Bitcoin Lightning Network",
  "scripts": {
    "start": "cd packages/daemon; npm run start",
    "bootstrap": "lerna bootstrap",
    "format": "prettier -v --check \"packages/**/*.ts\" \"examples/**/*.ts\"",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "postinstall": "lerna run prehoist",
    "bootstrap:ci": "lerna bootstrap --hoist",
    "version": "lerna version --no-push --no-git-tag-version",
    "publish": "lerna publish from-package",
    "clean": "lerna run clean"
  },
  "keywords": [
    "lightning-network",
    "node-lightning",
    "bitcoin"
  ],
  "author": "Brian Mancini <bmancini@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.13.0",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-mocha": "^10.1.0",
    "lerna": "^6.4.1",
    "mocha": "^10.2.0",
    "node-addon-api": "^4.2.0",
    "node-gyp": "^8.4.1",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
