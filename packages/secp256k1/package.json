  "license": "MIT",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/altangent/node-lightning.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "node-addon-api": "^4.2.0",
    "node-gyp": "^8.4.0"
  },
